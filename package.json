{
  "name": "codegen",
  "version": "1.0.0",
  "description": "A code generator for any language based on modeling",
  "main": "index.js",
  "repository": "https://github.com/mazinsw/codegen.git",
  "author": "Francimar Alves <mazinsw@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf coverage dist tmp",
    "build": "tsc -d -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "style:fix": "prettier --write \"src/**/*.ts\"",
    "style:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:cover": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk=9229 node_modules/.bin/jest -i",
    "grammar": "./make_parser.sh"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "tslib": "~2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^14.14.31",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "jest": "~28.1.3",
    "prettier": "~2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "tsutils": "~3.21.0",
    "typescript": "~4.7.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
